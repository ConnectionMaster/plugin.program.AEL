<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>

<category label="Metadata">
    <setting id="separator" type="lsep" label="Scan settings"/>
    <setting label="Recursive scan" type="bool" id="recursive_scan" default="true" />
    <setting label="Collecting Method" type="enum" id="datas_method" lvalues="None|NFO Files|Scrapers|NFO Files + Scrapers" default="0"/>
    <setting label="Import Mode" type="enum" id="scrap_info" lvalues="Semi-automatic|Automatic" default="0" visible="eq(-1,2) | eq(-1,3)"/>
    
    <setting id="separator" type="lsep" label="Scraper settings"/>
    <setting label="Source" type="fileenum" id="datas_scraper" default="AllGame" mask="/" values="/resources/scrapers/datas/"/>
    <setting label="Ignore BIOS files" type="bool" id="ignore_bios" default="true" visible="eq(-1,arcadeHITS)"/>
    
    <setting id="separator" type="lsep" label="Title Formatting"/>
    <setting label="Ignore Scraped Titles (use filenames)" type="bool" id="ignore_title" default="false"/>
    <setting label="Clean Titles (Remove version infos)" type="bool" id="clean_title" default="true" visible="eq(-1,false)"/>
    <setting label="Article ('The', 'A') at the end" type="bool" id="title_formating" default="true" visible="eq(-2,false)"/>
</category>

<category label="Thumbs">
    <setting id="separator" type="lsep" label="Scan settings"/>
    <setting label="Collecting Method" type="enum" id="thumbs_method" lvalues="None|Local Images|Scrapers" default="0"/>
    <setting label="Import Mode" type="enum" id="scrap_thumbs" lvalues="Semi-automatic|Automatic" default="0" visible="eq(-1,2)"/>
    
    <setting id="separator" type="lsep" label="Scraper settings"/>
    <setting label="Source" type="fileenum" id="thumbs_scraper" default="GameFAQs" mask="/" values="/resources/scrapers/thumbs/"/>
    <setting label="Thumbs Region" type="enum" id="game_region" lvalues="All|Europe|Japan|America" default="0" visible="eq(-1,GameFAQs)| eq(-1,MobyGames)"/>
    <setting label="Images Size" type="enum" id="thumb_image_size" lvalues="All|Icon|Small|Medium|Large|XLarge|XXLarge|Huge" default="0" visible="eq(-2,Google)"/>
    <setting label="Prefered images" type="enum" id="snap_flyer" lvalues="Snapshots|Flyers" default="0" visible="eq(-3,arcadeHITS)"/>
    <setting label="Overwrite Existing Files" type="bool" id="overwrite_thumbs" default="false"/>
</category>

<category label="Fanarts">
    <setting id="separator" type="lsep" label="Scan settings"/>
    <setting label="Collecting Method" type="enum" id="fanarts_method" lvalues="None|Local Images|Scrapers" default="0"/>
    <setting label="Import Mode" type="enum" id="scrap_fanarts" lvalues="Semi-automatic|Automatic" default="0" visible="eq(-1,2)"/>
    
    <setting id="separator" type="lsep" label="Scraper settings"/>
    <setting label="Source" type="fileenum" id="fanarts_scraper" default="GameFAQs" mask="/" values="/resources/scrapers/fanarts"/>
    <setting label="Images Size" type="enum" id="fanart_image_size" lvalues="All|Icon|Small|Medium|Large|XLarge|XXLarge|Huge" default="0" visible="eq(-1,Google)"/>
    <setting label="Selected fanart image" type="enum" id="select_fanarts" default="0" lvalues="First|Half|Last"/>
    <setting label="Overwrite Existing Files" type="bool" id="overwrite_fanarts" default="false"/>
</category>

<category label="Miscellaneous">
    <setting id="separator" type="lsep" label="Launcher start options"/>
    <setting label="Action on Kodi playing media" type="enum" id="media_state" lvalues="Stop|Pause|Let Play" default="0" />
    <setting label="Disable LIRC (Linux)" type="bool" id="lirc_state" default="true" />
    <setting label="Delay (ms)" type="slider" id="start_tempo" default="1000" range="0,100,15000" option="int"/>
    
    <setting id="separator" type="lsep" label="Display options"/>
    <setting label="Hide categories/launchers/items marked as finished" type="bool" id="hide_finished" default="false" />
    <setting label="Hide the Default Category" type="bool" id="hide_default_cat" default="false" />
    <setting label="Directly open Advanced Launcher into default category" type="bool" id="open_default_cat" default="false" />
    <setting label="Activate "Launching Application" notification" type="bool" id="launcher_notification" default="false" />
    
    <setting id="separator" type="lsep" label="Launchers Default Paths"/>
    <setting label="For Thumbs images" type="folder" id="launcher_thumb_path" default="" source="auto" />
    <setting label="For Fanarts images" type="folder" id="launcher_fanart_path" default="" source="auto"/>
    <setting label="Selected fanart image" type="folder" id="launcher_nfo_path" default="" source="auto" />
</category>

<category label="Advanced">
    <setting id="separator" type="lsep" label="Backup options"/>
    <setting label="Activate auto-backup" type="bool" id="auto_backup" default="true" />
    <setting label="Number of backup files to store" type="slider" id="nb_backup_files" default="10" range="5,5,100" option="int" visible="eq(-1,true)"/>
    <setting label="Import XML file (restore backup)" type="action" option="close" action="RunPlugin(plugin://plugin.program.advanced.launcher/?%%BACKUP%%)"/>
    <setting label="Append XML files (merge launchers lists)" type="action" option="close" action="RunPlugin(plugin://plugin.program.advanced.launcher/?%%APPEND%%)"/>
    
    <setting id="separator" type="lsep" label="Debug options"/>
    <setting label="Advanced Launcher logs into kodi.log file" type="bool" id="show_log" default="true"/>
    <setting label="Show batch command window" type="bool" id="show_batch" default="false"/>
</category>

</settings>
